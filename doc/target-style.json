{
    "project_meta": {
        "name": "Summary sample - Avid Preset (Review Layout)",
        "target_resolution": {
            "width": 3840,
            "height": 2160
        },
        "description": "Modified layout with split right-panel: Top for Lyrics, Bottom for Personal Review."
    },
    "layout_preset": {
        "visual_style": {
            "background": {
                "type": "dominant_color_gradient",
                "blur_strength_px": 80,
                "overlay_opacity": 0.3,
                "color_primary": "#F2EFE4",
                "color_secondary": "#E6DBC6"
            },
            "typography": {
                "font_family_main": "'Noto Sans JP', 'Roboto', sans-serif",
                "font_family_review": "'Ma Shan Zheng', 'KaiTi', serif",
                "color_primary": "#333333",
                "color_secondary": "#666666",
                "color_accent": "#8C8C8C"
            }
        },
        "elements_positioning_4k": {
            "container": {
                "display": "flex",
                "flex_direction": "row",
                "padding": "120px"
            },
            "left_column": {
                "width_percent": 45,
                "display": "flex",
                "align_items": "center",
                "justify_content": "center"
            },
            "right_column": {
                "width_percent": 55,
                "display": "flex",
                "flex_direction": "column",
                "justify_content": "space-between",
                "padding_left_px": 120
            },
            "album_art": {
                "width_px": 1100,
                "height_px": 1100,
                "border_radius_px": 24,
                "shadow": "0 40px 80px rgba(0,0,0,0.25)"
            },
            "metadata_panel": {
                "height_percent": 15,
                "margin_bottom_px": 40
            },
            "lyrics_panel": {
                "height_percent": 40,
                "overflow": "hidden",
                "mask_image": "linear-gradient(to bottom, black 80%, transparent 100%)",
                "margin_bottom_px": 60
            },
            "review_panel": {
                "height_percent": 35,
                "background": "rgba(255, 255, 255, 0.4)",
                "border_radius_px": 16,
                "padding_px": 40,
                "display": "flex",
                "align_items": "flex-start",
                "justify_content": "flex-start"
            }
        }
    },
    "control_logic": {
        "section_layout_split": {
            "label": "布局分区 (Layout Split)",
            "controls": [
                {
                    "id": "lyrics_height_ratio",
                    "label": "歌词区域占比 (Lyrics Area %)",
                    "type": "slider",
                    "default": 40,
                    "min": 20,
                    "max": 70,
                    "step": 5
                },
                {
                    "id": "review_height_ratio",
                    "label": "评价区域占比 (Review Area %)",
                    "type": "slider",
                    "default": 35,
                    "min": 10,
                    "max": 60,
                    "step": 5
                },
                {
                    "id": "column_gap",
                    "label": "左右栏间距 (Column Gap px)",
                    "type": "slider",
                    "default": 120,
                    "min": 50,
                    "max": 300,
                    "step": 10
                }
            ]
        },
        "section_review": {
            "label": "个人评价设置 (Personal Review)",
            "controls": [
                {
                    "id": "show_review",
                    "label": "显示评价 (Show Review)",
                    "type": "boolean",
                    "default": true
                },
                {
                    "id": "review_font_size",
                    "label": "评价字号 (Review Font Size)",
                    "type": "slider",
                    "default": 1.8,
                    "unit": "em",
                    "min": 1.0,
                    "max": 4.0,
                    "step": 0.1
                },
                {
                    "id": "review_bg_opacity",
                    "label": "背景透明度 (Box Opacity)",
                    "type": "slider",
                    "default": 0.4,
                    "min": 0,
                    "max": 1,
                    "step": 0.1
                },
                {
                    "id": "review_font_family",
                    "label": "评价字体 (Review Font)",
                    "type": "select",
                    "options": [
                        "Serif (Songti)",
                        "Handwritten",
                        "Sans-serif"
                    ],
                    "default": "Serif (Songti)"
                }
            ]
        },
        "section_typography": {
            "label": "歌词排版 (Lyrics Typography)",
            "controls": [
                {
                    "id": "lyrics_lines_count",
                    "label": "可见行数 (Visible Lines)",
                    "type": "slider",
                    "default": 4,
                    "min": 1,
                    "max": 8,
                    "step": 1,
                    "description": "Reduced default to fit top half"
                },
                {
                    "id": "font_size_main",
                    "label": "歌词大小 (Font Size)",
                    "type": "slider",
                    "default": 2,
                    "unit": "em",
                    "min": 1,
                    "max": 5,
                    "step": 0.1
                }
            ]
        },
        "section_visibility": {
            "label": "基础元素 (Basic Elements)",
            "controls": [
                {
                    "id": "show_album_art",
                    "label": "显示封面",
                    "type": "boolean",
                    "default": true
                },
                {
                    "id": "show_progress_bar",
                    "label": "显示进度条",
                    "type": "boolean",
                    "default": true
                }
            ]
        }
    },
    "mock_data": {
        "track_info": {
            "title": "Avid",
            "artist": "SawanoHiroyuki[nZk]:mizuki"
        },
        "lyrics_snippet": [
            {
                "text": "か弱い光が指差す先",
                "trans": "依稀可见一道微弱的光线所向"
            },
            {
                "text": "Silent haze 霞みがちに捉える影",
                "trans": "悄烟悄蔓 那身影不时浓烟中奋战"
            },
            {
                "text": "6/8(ハチロク)のリズム 掻き乱さ",
                "trans": "6/8拍的节奏 被扰乱"
            }
        ],
        "personal_review": {
            "content": "《Avid》这首歌展现了泽野弘之标志性的宏大编曲与mizuki空灵嗓音的完美结合。钢琴的前奏如同晨雾般迷离，随着鼓点的切入，情感层层递进。这不仅仅是一首动画配乐，更像是一场关于寻找与救赎的内心独白，非常适合在深夜静听。",
            "author": "MusicLover",
            "date": "2023.10.24"
        }
    }
}