{
    "project_meta": {
        "name": "music_summary_layout",
        "target_resolution": {
            "width": 3840,
            "height": 2160
        },
        "description": "A responsive music player layout engine configuration based on Image 1 visuals with Image 2 control logic."
    },
    "layout_preset": {
        "visual_style": {
            "background": {
                "type": "dominant_color_gradient",
                "blur_strength_px": 80,
                "overlay_opacity": 0.3,
                "color_primary": "#F2EFE4",
                "color_secondary": "#E6DBC6"
            },
            "typography": {
                "font_family_main": "'Noto Sans JP', 'Roboto', sans-serif",
                "font_family_fallback": "sans-serif",
                "color_primary": "#333333",
                "color_secondary": "#666666",
                "color_accent": "#8C8C8C"
            }
        },
        "elements_positioning_4k": {
            "container": {
                "display": "flex",
                "flex_direction": "row",
                "align_items": "center",
                "justify_content": "center",
                "padding": "120px"
            },
            "album_art": {
                "width_px": 1100,
                "height_px": 1100,
                "border_radius_px": 24,
                "shadow": "0 40px 80px rgba(0,0,0,0.25)",
                "margin_right_px": 240
            },
            "lyrics_panel": {
                "width_px": 1400,
                "text_align": "left",
                "active_line_scale": 1.2,
                "inactive_line_opacity": 0.4,
                "line_height": 1.8
            },
            "controls_bar": {
                "position": "absolute",
                "bottom_px": 180,
                "width_percent": 80,
                "items_gap_px": 60
            }
        }
    },
    "control_logic": {
        "section_canvas": {
            "label": "界面设置 (Canvas Settings)",
            "controls": [
                {
                    "id": "canvas_width",
                    "label": "宽 (Width)",
                    "type": "number",
                    "default": 3840,
                    "min": 1280,
                    "max": 7680
                },
                {
                    "id": "canvas_height",
                    "label": "高 (Height)",
                    "type": "number",
                    "default": 2160,
                    "min": 720,
                    "max": 4320
                }
            ]
        },
        "section_visibility": {
            "label": "元素显示 (Element Visibility)",
            "controls": [
                {
                    "id": "show_album_art",
                    "label": "显示封面 (Show Album Art)",
                    "type": "boolean",
                    "default": true,
                    "target_element": ".album-art-container"
                },
                {
                    "id": "show_lyrics",
                    "label": "显示歌词 (Show Lyrics)",
                    "type": "boolean",
                    "default": true,
                    "target_element": ".lyrics-container"
                },
                {
                    "id": "show_translation",
                    "label": "显示翻译 (Show Translation)",
                    "type": "boolean",
                    "default": true,
                    "condition": "has_translation_data"
                },
                {
                    "id": "show_progress_bar",
                    "label": "显示进度条 (Show Progress Bar)",
                    "type": "boolean",
                    "default": true,
                    "target_element": ".progress-bar-container"
                },
                {
                    "id": "enable_blur_bg",
                    "label": "背景模糊/流光 (Background Blur/Flow)",
                    "type": "boolean",
                    "default": true,
                    "css_class_toggle": "bg-blur-active"
                }
            ]
        },
        "section_playback": {
            "label": "播放控件 (Playback Controls)",
            "controls": [
                {
                    "id": "show_random_play",
                    "label": "显示随机播放 (Show Shuffle)",
                    "type": "boolean",
                    "default": true
                },
                {
                    "id": "show_loop_play",
                    "label": "显示循环播放 (Show Loop)",
                    "type": "boolean",
                    "default": true
                }
            ]
        },
        "section_typography": {
            "label": "排版细节 (Typography & Layout)",
            "controls": [
                {
                    "id": "lyrics_lines_count",
                    "label": "歌词行数 (Lyric Lines)",
                    "type": "slider",
                    "default": 5,
                    "min": 1,
                    "max": 12,
                    "step": 1
                },
                {
                    "id": "font_size_main",
                    "label": "字体大小 (Font Size)",
                    "type": "slider",
                    "default": 2,
                    "unit": "em",
                    "min": 1,
                    "max": 5,
                    "step": 0.1
                },
                {
                    "id": "font_family_select",
                    "label": "字体 (Font Family)",
                    "type": "select",
                    "options": [
                        "Default (Sans-serif)",
                        "Serif",
                        "Impact",
                        "Mono"
                    ],
                    "default": "Default (Sans-serif)"
                },
                {
                    "id": "album_art_scale",
                    "label": "封面大小 (Cover Size %)",
                    "type": "slider",
                    "default": 90,
                    "min": 20,
                    "max": 150,
                    "step": 5
                },
                {
                    "id": "lyrics_margin_left",
                    "label": "画布留白 (Margin/Padding px)",
                    "type": "slider",
                    "default": 100,
                    "min": 0,
                    "max": 500,
                    "step": 10
                },
                {
                    "id": "translation_spacing",
                    "label": "翻译间距 (Translation Spacing px)",
                    "type": "slider",
                    "default": 10,
                    "min": 0,
                    "max": 50,
                    "step": 2
                }
            ]
        }
    },
    "mock_data": {
        "track_info": {
            "title": "Avid",
            "artist": "SawanoHiroyuki[nZk]:mizuki",
            "album": "Avid / Hands Up to the Sky",
            "meta": {
                "codec": "FLAC 24 bits",
                "sample_rate": "44.1 kHz",
                "lyricist": "cAnON.",
                "composer": "澤野弘之",
                "arranger": "澤野弘之"
            }
        },
        "lyrics_snippet": [
            {
                "time": "00:00",
                "text": "か弱い光が指差す先",
                "trans": "依稀可见一道微弱的光线所向"
            },
            {
                "time": "00:10",
                "text": "Silent haze 霞みがちに捉える影",
                "trans": "悄烟悄蔓 那身影不时浓烟中奋战"
            },
            {
